{
    "author": "Christoph Guttandin",
    "bugs": {
        "url": "https://github.com/chrisguttandin/stylelint-config-holy-grail/issues"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "dependencies": {
        "postcss": "^8.4.38",
        "postcss-scss": "^4.0.9",
        "stylelint-order": "^6.0.4",
        "stylelint-scss": "^6.3.0"
    },
    "description": "This is my personal stylelint configuration.",
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-angular": "^19.3.0",
        "chai": "^5.1.0",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.57.0",
        "eslint-config-holy-grail": "^59.0.9",
        "grunt": "^1.6.1",
        "grunt-cli": "^1.4.3",
        "grunt-sh": "^0.2.1",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.2",
        "load-grunt-config": "^4.0.1",
        "mocha": "^10.4.0",
        "prettier": "^3.2.5",
        "stylelint": "^16.5.0"
    },
    "engines": {
        "node": ">=18.2.0"
    },
    "files": [
        "src/"
    ],
    "homepage": "https://github.com/chrisguttandin/stylelint-config-holy-grail",
    "keywords": [
        "stylelint",
        "stylelint-config"
    ],
    "license": "MIT",
    "main": "src/module.js",
    "name": "stylelint-config-holy-grail",
    "peerDependencies": {
        "stylelint": "^16.2.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/chrisguttandin/stylelint-config-holy-grail.git"
    },
    "scripts": {
        "lint": "npm run lint:config && npm run lint:src && npm run lint:test",
        "lint:config": "eslint --config config/eslint/config.json --ext .js --report-unused-disable-directives config/",
        "lint:src": "eslint --config config/eslint/src.json --ext .js --report-unused-disable-directives src/",
        "lint:test": "eslint --config config/eslint/test.json --ext .js --report-unused-disable-directives test/",
        "prepare": "husky install",
        "test": "grunt lint && grunt test"
    },
    "version": "12.0.7"
}
